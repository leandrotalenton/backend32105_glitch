<link rel="stylesheet" href="/productos.css">



<div class="productos">
    <% if(productos.length===0){ %>
        <h2>No hay informacion para mostrar</h2>
    <% }else{ %>
        <table>
            <thead>
                <tr>
                    <td>Title</td>
                    <td>Price</td>
                    <td>Thumbnail</td>
                </tr>
            </thead>
            <tbody>
            <% productos.forEach(producto => { %>
                <tr>
                    <td> <%= producto.title %> </td>
                    <td> <%= producto.price %> </td>
                    <td> <img src=<%= producto.thumbnail %> alt="<%= producto.thumbnail %>"></td>
                </tr>
            <% }) %>
            </tbody>
        </table>    
    <% } %>
    <a href="/"><button>Ir a /</button></a>
</div>